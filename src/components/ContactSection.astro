<section id="contact" class="py-16">
  <h2 class="font-heading text-3xl sm:text-4xl text-science-yellow mb-12 text-center">
    // ESTABLISH_CONTACT
  </h2>
  <form
    action="https://api.web3forms.com/submit" method="POST"
    class="max-w-lg mx-auto space-y-6 bg-soft-gray-light p-6 md:p-8 border-2 border-science-yellow/50 shadow-lg"
  >
    <input type="hidden" name="access_key" value="YOUR_WEB3FORMS_ACCESS_KEY_HERE"> <input type="hidden" name="subject" value="New Contact from Portfolio Site">
    <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

    <div>
      <label for="name" class="block text-sm font-body text-science-yellow mb-1">NAME:</label>
      <input type="text" name="name" id="name" required class="w-full bg-soft-gray-dark border-2 border-science-yellow/50 focus:border-science-yellow text-white p-3 focus:outline-none focus:ring-2 focus:ring-science-yellow focus:ring-opacity-75 shadow-glow-yellow" />
    </div>
    <div>
      <label for="email" class="block text-sm font-body text-science-yellow mb-1">EMAIL_ADDRESS:</label>
      <input type="email" name="email" id="email" required class="w-full bg-soft-gray-dark border-2 border-science-yellow/50 focus:border-science-yellow text-white p-3 focus:outline-none focus:ring-2 focus:ring-science-yellow focus:ring-opacity-75 shadow-glow-yellow" />
    </div>
    <div>
      <label for="message" class="block text-sm font-body text-science-yellow mb-1">MESSAGE_PAYLOAD:</label>
      <textarea name="message" id="message" rows="5" required class="w-full bg-soft-gray-dark border-2 border-science-yellow/50 focus:border-science-yellow text-white p-3 focus:outline-none focus:ring-2 focus:ring-science-yellow focus:ring-opacity-75 shadow-glow-yellow"></textarea>
    </div>
    <div>
      <button type="submit" class="w-full px-8 py-3 bg-science-yellow text-soft-gray-dark font-heading text-lg hover:bg-yellow-400 focus:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-yellow-300 focus:ring-offset-2 focus:ring-offset-soft-gray-light transition-colors">
        TRANSMIT &gt;
      </button>
    </div>
  </form>
</section>
