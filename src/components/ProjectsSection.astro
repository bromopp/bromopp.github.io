---
import ProjectCard from './ProjectCard.astro';
import { projectImages } from '../assets/projects/index.ts';

// Your actual projects
const projects = [
  {
    title: "PongPDS",
    description: "A Lua remake of the classic Pong game with enhanced gameplay mechanics using the LÖVE2D engine. Features three unique skills for each player: freeze projectile, dash, and shield abilities that add strategic depth and dynamic gameplay to the traditional formula.",
    tech: ["Lua", "LÖVE2D", "Game Development", "Physics"],
    imageUrl: projectImages.pongpds,
    imageAlt: "PongPDS game screenshot showing enhanced Pong gameplay with special abilities",
    repoUrl: "https://github.com/bromopp/PongPDS",
    featured: true
    },
    {
    title: "GroSkills",
    description: "A testing 3d project in unity, in this project I tested 3d movement of human character, did some 3d modeling in blender then rigged, and blended all the animations for walking, running and idle.",
    tech: ["Blender","Unity", "Game Development", "Animations", "3D"],
    imageUrl: projectImages.narutorunDoll,
    imageAlt: "Player model rigged and animated",
    repoUrl: "https://github.com/bromopp/GroSkills",
    featured: true
    },
  // Add more of your projects here as you build them
];
---

<section id="projects" class="py-16">
  <h2 class="font-heading text-3xl sm:text-4xl text-science-yellow mb-12 text-center">
    // PROJECT_ARCHIVES
  </h2>
  
  {projects.length === 1 ? (
    <!-- Single project layout - centered and larger -->
    <div class="max-w-2xl mx-auto">
      <ProjectCard {...projects[0]} />
    </div>
  ) : (
    <!-- Multiple projects layout - responsive grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <ProjectCard {...project} />
      ))}
    </div>
  )}
  
  {/* Add a note about more projects coming */}
  <div class="mt-16 text-center">
    <div class="inline-block bg-soft-gray-light border border-science-yellow/30 px-6 py-4">
      <p class="font-body text-science-yellow/70 text-sm">
        // MORE_PROJECTS_IN_DEVELOPMENT
      </p>
      <p class="font-retro text-xs text-gray-400 mt-2">
        Stay tuned for upcoming web and game development projects
      </p>
    </div>
  </div>
</section>
