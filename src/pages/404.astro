---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="404: Not Found" description="Page not found.">
  <div class="text-center py-20 min-h-[60vh] flex flex-col justify-center items-center">
    <h1 class="font-heading text-6xl text-science-yellow mb-4">404</h1>
    <p class="font-heading text-2xl text-white mb-8">ERROR: Signal_Lost // Page_Not_Found</p>
    <a href="/" class="px-6 py-3 bg-science-yellow text-soft-gray-dark font-heading hover:bg-yellow-400 focus:bg-yellow-400 transition-colors">
      RETURN_TO_BASE &gt;
    </a>
  </div>
</BaseLayout>
